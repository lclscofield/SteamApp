    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.game-card {
    margin-bottom: 20rpx;
    display: flex;
    color: #1b3b51;
    animation: game 0.3s linear;
    background-color: #fff;
}

/* 点击态 */
.hover-class {
    background: #d3d5d7;
}

