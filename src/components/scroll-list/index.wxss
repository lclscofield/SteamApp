.game-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 20rpx;
    overflow: hidden;
}

.game-title {
    line-height: 48rpx;
}

.game-right-btm-wrap {
    display: flex;
    flex-direction: column;
}

.game-sys {
    display: flex;
    flex-direction: row-reverse;
}

.game-sys-img {
    width: 36rpx;
    height: 36rpx;
    filter: brightness(0.5);
    margin-left: 10rpx;
}

.game-right-btm {
    display: flex;
    justify-content: space-between;
    height: 60rpx;
}

.game-discount {
    display: inline-block;
    color: #8bc53f;
    background: #4c6b22;
    padding: 0 10rpx;
    line-height: 60rpx;
}

.game-price-wrap {
    flex: 1;
    text-align: right;
    align-items: center;
    line-height: 60rpx;
}

.game-price {
    display: inline-block;
    color: #888888;
    text-decoration: line-through;
}

.game-strike {
    display: inline-block;
    margin-left: 20rpx;
}

.game-strike.active {
    font-size: 32rpx;
    color: #1aa36f;
}